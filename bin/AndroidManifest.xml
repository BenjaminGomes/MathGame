<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bgomes.mathgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/math_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MathActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroFragment"
            android:label="@string/title_activity_intro_fragment" >
        </activity>
        <activity
            android:name=".SelectGameFragment"
            android:label="@string/title_activity_select_game_fragment" >
        </activity>
        <activity
            android:name=".AddQuestionFragment"
            android:label="@string/title_activity_add_fragment" >
        </activity>
        <activity
            android:name=".RevealScoreFragment"
            android:label="@string/title_activity_reveal_score_fragment" >
        </activity>
        <activity
            android:name=".SettingsActivity"
        	android:label="@string/title_activity_settings" >
        </activity>	
    </application>

</manifest>
